@model WestcoastEducation.Web.Models.User

@{
    Layout = "_LayoutAdmin";
}

<section class="page">
    <h1 class="page-title">Edit user</h1>

    <form class="shadow" asp-action="edit" asp-controller="UserAdmin" asp-route-userId=@Model.UserId method="post">

        <div class="form-control">
            <label for="">First name</label>
            <input asp-for="FirstName" />
        </div>
        <div class="form-control">
            <label for="">Last name</label>
            <input asp-for="LastName" />
        </div>
        <div class="form-control">
            <label for="">E-email</label>
            <input asp-for="Email" />
        </div>
         <div class="form-control">
            <label for="">Social security number</label>
            <input asp-for="SocialSecurityNumber" />
        </div>
         <div class="form-control">
            <label for="">Street address</label>
            <input asp-for="StreetAddress" />
        </div>
          <div class="form-control">
            <label for="">Post number</label>
            <input asp-for="PostalCode" />
        </div>
          <div class="form-control">
            <label for="">Phone number</label>
            <input asp-for="Phone" />
        </div>

        <div class="form-control">
            <div class="buttons-container">
                <button type="Submit" class="btn-submit">
                    <i class="fa-sharp fa-solid fa-floppy-disk"></i> Save
                </button>
                <button class="btn-cancel">
                    <a asp-action="Index" asp-controller="UserAdmin">
                        <i class="fa-solid fa-arrow-left"></i> Cancel</a>
                </button>
            </div>

        </div>
    </form>
</section>